<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/activity_main"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="501dp"
        android:layout_height="55dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="#28A3A3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="139dp"
        android:layout_height="38dp"
        android:layout_marginStart="40dp"
        android:gravity="center"
        android:text="EasyText"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView" />


    <ImageView
        android:id="@+id/back"
        android:layout_width="17dp"
        android:layout_height="25dp"
        android:layout_marginStart="20dp"
        android:gravity="center"
        android:background="@drawable/back"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView" />

    <Button
        android:id="@+id/color1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/color1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/color2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/color2"
        app:layout_constraintBottom_toBottomOf="@+id/color1"
        app:layout_constraintStart_toEndOf="@+id/color1"
        app:layout_constraintTop_toTopOf="@+id/color1"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/color3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/color3"
        app:layout_constraintBottom_toBottomOf="@+id/color2"
        app:layout_constraintStart_toEndOf="@+id/color2"
        app:layout_constraintTop_toTopOf="@+id/color2"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/color4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/color4"
        app:layout_constraintBottom_toBottomOf="@+id/color3"
        app:layout_constraintStart_toEndOf="@+id/color3"
        app:layout_constraintTop_toTopOf="@+id/color3"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/color5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/color5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/color1" />

    <Button
        android:id="@+id/color6"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/color6"
        app:layout_constraintBottom_toBottomOf="@+id/color5"
        app:layout_constraintStart_toEndOf="@+id/color5"
        app:layout_constraintTop_toTopOf="@+id/color5" />

    <Button
        android:id="@+id/color7"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/color7"
        app:layout_constraintBottom_toBottomOf="@+id/color8"
        app:layout_constraintStart_toEndOf="@+id/color6"
        app:layout_constraintTop_toTopOf="@+id/color8" />

    <Button
        android:id="@+id/color8"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/color8"
        app:layout_constraintStart_toEndOf="@+id/color7"
        app:layout_constraintTop_toBottomOf="@+id/color4" />


</android.support.constraint.ConstraintLayout>
